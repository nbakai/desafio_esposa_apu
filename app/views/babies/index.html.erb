<p id="notice"><%= notice %></p>

<h1>Babies</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Veces que ha tomado leche</th>
      <th>Cantidad total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @babies.each do |baby| %>
    <%cantidad_total = 0%>
      <tr>
        <td><%= baby.name %></td>
        <td><%= baby.breastfeedings.count %> </td>
        <td><% baby.breastfeedings.each do |breastfeeding| %>
                
                <% cantidad_total += breastfeeding.cantidad %>
            <%end%>
                <%= cantidad_total%> cc.
        </td>
        <td><%= link_to 'Show', baby %></td>
        <td><%= link_to 'Edit', edit_baby_path(baby) %></td>
        <td><%= link_to 'Eliminar', baby, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %>
        
      </tr>
    <% end %>
  </tbody>
</table>

